.top {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.top .bg {
  background-color: #26CD8C;
  height: 120rpx;
  width: 100%;
}
.top .v-grid {
  padding: 0 0 15rpx 0;
  margin-top: -100rpx;
  background-color: #ffffff;
  width: 90%;
  border-radius: 24rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
  margin-bottom: 30rpx;
}
.top .image {
  width: 80rpx;
  height: 80rpx;
}
.top .grid-item-box {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10rpx 0;
}
.top .grid-dot {
  position: absolute;
  top: 5px;
  right: 15px;
}
.top .yzb {
  font-size: 85rpx;
  color: #26CD8C;
  height: 125rpx;
}
.loading {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
}
.loading text {
  color: #666666;
}
.nodata {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #666666;
  font-size: 32rpx;
  margin-top: 250rpx;
}

