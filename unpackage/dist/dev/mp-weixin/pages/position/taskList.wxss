.body {
  margin-top: 170rpx;
  background-color: #ffffff;
}
.top {
  width: 100%;
  position: fixed;
  top: "--var-top";
  z-index: 999;
  display: flex;
  flex-direction: column;
}
.search {
  z-index: 999;
  width: 100%;
  display: flex;
  height: 90rpx;
  flex-direction: row;
  background-color: #26CD8C;
  color: #ffffff;
  align-items: center;
  justify-content: center;
}
.search .yzb-search {
  color: #999999;
  font-size: 28rpx;
  margin: 0 15rpx;
  margin-top: 8rpx;
}
.search .search-input {
  width: 77%;
  height: 65rpx;
  line-height: 65rpx;
  border-radius: 50rpx;
  display: flex;
  flex-direction: row;
  background-color: #ffffff;
  align-items: center;
}
.search .search-input image {
  width: 35rpx;
  height: 35rpx;
  margin-right: 10rpx;
}
.search .search-input input {
  width: 65%;
  font-size: 28rpx;
  color: #333333;
}
.search .btn-search {
  margin-left: 20rpx;
}
.search .btn-cancel {
  margin-left: 20rpx;
}

