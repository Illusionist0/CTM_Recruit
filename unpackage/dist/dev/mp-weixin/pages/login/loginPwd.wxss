.bottom_pact {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 70rpx;
  line-height: 70rpx;
  width: 100%;
  position: fixed;
  bottom: 40rpx;
}
.bottom_pact .agreement {
  font-size: 28rpx;
  color: #9B9B9B;
}
.bottom_pact .agreement-text {
  text-decoration: underline;
  color: #12ae85;
  padding: 0 10rpx;
  font-size: 28rpx;
}
.confirm-btn {
  width: 100%;
  padding: 3%;
  display: flex;
  flex-direction: column;
}
.confirm-btn-wx {
  width: 600rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 50px;
  margin-top: 45rpx;
  background: #3fa041;
  color: #fff;
  font-size: 32rpx;
}
.confirm-btn-wx:after {
  border-radius: 100px;
}
.confirm-btn-wx2 {
  width: 98%;
  height: 75rpx;
  line-height: 75rpx;
  border-radius: 10rpx;
  margin-top: 45rpx;
  background: #3fa041;
  color: #fff;
  font-size: 32rpx;
}
.confirm-btn-phone {
  width: 98%;
  height: 75rpx;
  line-height: 75rpx;
  border-radius: 10rpx;
  margin-top: 30rpx;
  background: #fff;
  color: #333;
  font-size: 32rpx;
}
.confirm-btn-cancel {
  width: 40%;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 50px;
  margin-top: 45rpx;
  background: #ffffff;
  border: 1rpx solid #3fa041;
  color: #3fa041;
  font-size: 32rpx;
}
.confirm-btn-cancel:after {
  border-radius: 100px;
}
.auth-login {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 100rpx;
}
.auth-log-login {
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
  position: relative;
  margin: 0 35rpx;
}
.btn-wx {
  position: fixed;
  opacity: 0;
  border-radius: 50px;
  background: #2ba245;
  color: #fff;
  font-size: 32rpx;
}
.back-btn {
  position: absolute;
  left: 40rpx;
  z-index: 9999;
  padding-top: 25px;
  top: 20rpx;
  font-size: 40rpx;
  color: #303133;
}
.top_click {
  display: flex;
  width: 100%;
  height: 120rpx;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}
.top_click_xcx {
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}
.martop_app {
  margin-top: 200rpx;
}
.martop_xcx {
  margin-top: 180rpx;
  display: flex;
  flex-direction: column;
}
.header {
  margin: 50rpx 0 50rpx 0;
  text-align: center;
  width: 100%;
  height: 300rpx;
  line-height: 450rpx;
}
.header image {
  width: 200rpx;
  height: 200rpx;
}
.content2 {
  padding: 30rpx 80rpx;
}
.content2 text {
  display: block;
  color: #9d9d9d;
  margin-top: 40rpx;
}
.bottom-select-line {
  width: 50rpx;
  height: 8rpx;
  border-radius: 15rpx;
  background: #26CD8C;
  color: #26CD8C;
}
.content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* margin-top: 128upx; */
}
/* 主体 */
.main {
  display: flex;
  flex-direction: column;
  padding-left: 70rpx;
  padding-right: 70rpx;
}
.tips {
  color: #999999;
  font-size: 28rpx;
  margin-top: 64rpx;
  margin-left: 48rpx;
}
/* 其他登录方式 */
.other_login {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-top: 256rpx;
  text-align: center;
}
.login_icon {
  border: none;
  font-size: 64rpx;
  margin: 0 64rpx 0 64rpx;
  color: rgba(0, 0, 0, 0.7);
}
.wechat_color {
  color: #83dc42;
}
.weibo_color {
  color: #f9221d;
}
.github_color {
  color: #24292e;
}
/* 底部 */
.footer {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  width: 88%;
  font-size: 28rpx;
  margin-top: 30rpx;
  color: #999;
  text-align: center;
  height: 40rpx;
  line-height: 40rpx;
}
.footer text {
  font-size: 24rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
}

