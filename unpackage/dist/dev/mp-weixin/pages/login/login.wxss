.wx-auth {
  width: 100%;
}
.wx-auth .header {
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  width: 100%;
  height: 450rpx;
}
.wx-auth .header image {
  width: 260rpx;
  height: 260rpx;
}
.wx-auth .content2 {
  padding: 30rpx 80rpx;
}
.wx-auth .content2 text {
  display: block;
  color: #666666;
  margin-top: 40rpx;
}
.wx-auth .btn {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.wx-auth .btn-auth {
  border-radius: 20rpx;
  margin-top: 50rpx;
  font-size: 35rpx;
  width: 90%;
  background-color: #26CD8C;
  color: #ffffff;
}
.wx-auth .btn-get-phone {
  border-radius: 20rpx;
  margin-top: 50rpx;
  font-size: 35rpx;
  width: 90%;
  background-color: #26CD8C;
  color: #ffffff;
}
.wx-auth .cancel-login {
  border-radius: 15rpx;
  margin: 70rpx 20rpx 50rpx 50rpx;
  font-size: 35rpx;
  background-color: #eeeeee;
  width: 30%;
}
.bottom {
  display: flex;
  width: 100%;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 20rpx;
}
.bottom .other-login {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.bottom .other-login .title {
  color: #666666;
}
.bottom .other-login .yzb-shoujisel {
  font-size: 100rpx;
  color: #26CD8C;
}
.bottom .agreement {
  margin-top: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.bottom .agreement .agreement2 {
  font-size: 28rpx;
  color: #9B9B9B;
}
.bottom .agreement .agreement-text {
  text-decoration: underline;
  color: #12ae85;
  padding: 0 10rpx;
  font-size: 28rpx;
}

