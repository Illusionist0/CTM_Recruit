.body {
  margin-top: 90rpx;
  background-color: #ffffff;
}
.law .item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
  border-bottom: 10rpx solid #f8f8f8;
}
.law .item .left {
  display: flex;
  flex-direction: column;
}
.law .item .yzb-next {
  margin-left: 15rpx;
  color: #999999;
}
.law .item .title {
  font-size: 32rpx;
  font-weight: bold;
}
.law .item .summary {
  font-size: 24rpx;
  color: #999;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.search {
  position: fixed;
  top: '--var-top';
  z-index: 999;
  width: 100%;
  display: flex;
  height: 90rpx;
  flex-direction: row;
  background-color: #26CD8C;
  color: #ffffff;
  align-items: center;
  justify-content: center;
}
.search .yzb-search {
  color: #999999;
  font-size: 28rpx;
  margin: 0 15rpx;
  margin-top: 8rpx;
}
.search .search-input {
  width: 77%;
  height: 65rpx;
  line-height: 65rpx;
  border-radius: 50rpx;
  display: flex;
  flex-direction: row;
  background-color: #ffffff;
  align-items: center;
}
.search .search-input image {
  width: 35rpx;
  height: 35rpx;
  margin-right: 10rpx;
}
.search .search-input input {
  width: 65%;
  font-size: 28rpx;
  color: #333333;
}
.search .btn-search {
  margin-left: 20rpx;
}
.search .btn-cancel {
  margin-left: 20rpx;
}

