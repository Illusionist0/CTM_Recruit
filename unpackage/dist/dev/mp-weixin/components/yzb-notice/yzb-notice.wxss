.xzw_notice {
  font-size: 26rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  box-sizing: border-box;
  width: 100%;
}
.xzw_notice .notice_left {
  margin: 0 20rpx 0 0;
}
.xzw_notice .notice_center {
  flex: 1;
  height: 90rpx;
}
.xzw_notice .notice_center .swiperIn {
  height: 80rpx;
  display: flex;
  align-items: center;
}
.xzw_notice .notice_center .swiperIn view {
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.xzw_notice .notice_center2 {
  flex: 1;
  position: relative;
  display: flex;
  align-items: center;
  height: 90rpx;
  overflow: hidden;
}
.xzw_notice .notice_center2 view {
  position: absolute;
  white-space: nowrap;
  padding-left: 100%;
  -webkit-animation: notice 5s 0s linear infinite both;
          animation: notice 5s 0s linear infinite both;
}
.xzw_notice .notice_right {
  margin: 0 0 0 20rpx;
}
@-webkit-keyframes notice {
100% {
    -webkit-transform: translate3d(-100%, 0, 0);
            transform: translate3d(-100%, 0, 0);
}
}
@keyframes notice {
100% {
    -webkit-transform: translate3d(-100%, 0, 0);
            transform: translate3d(-100%, 0, 0);
}
}

