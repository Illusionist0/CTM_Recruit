.list {
  padding: 20rpx;
  background-color: #f8f8f8;
}
.list .item {
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 8px;
}
.list .top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 5rpx 0;
}
.list .top .title {
  font-size: 32rpx;
  font-weight: bold;
}
.list .top .price {
  font-size: 32rpx;
  color: #26CD8C;
}
.list .desc {
  color: #666666;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.list .bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 10rpx 0rpx;
}
.list .bottom text {
  font-size: 28rpx;
  padding: 5rpx 10rpx;
  margin-right: 15rpx;
  border-radius: 5rpx;
}
.list .bottom .label-type {
  background-color: #EBEEF5;
  color: #666666;
}
.list .bottom .label {
  border: 1rpx solid #FF822B;
  color: #FF822B;
}
.list .bottom .time {
  color: #666666;
}
.list:hover .item {
  opacity: .4;
}
.list .item:hover {
  -webkit-filter: blur(0);
          filter: blur(0);
  opacity: 1;
  -webkit-transform: scale(1.02);
          transform: scale(1.02);
}

