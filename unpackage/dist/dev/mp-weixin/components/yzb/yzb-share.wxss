.m-position .item {
  background-color: #ffffff;
}
.m-position .job {
  border-bottom: 3rpx solid #f8f8f8;
  padding: 30rpx 20rpx;
}
.m-position .job .title .left {
  font-weight: bold;
  font-size: 32rpx;
}
.m-position .job .title .title-name {
  font-weight: bold;
  font-size: 32rpx;
}
.m-position .job .title .title-share {
  color: #26CD8C;
  border: 1rpx solid #26CD8C;
  border-radius: 20rpx 0rpx;
  font-size: 24rpx;
  margin-left: 20rpx;
  padding: 0rpx 10rpx;
}
.m-position .job .title .right {
  color: #f0ad4e;
  font-weight: bold;
}
.m-position .job .company {
  color: #666666;
  margin-top: 5rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.m-position .job .company .height-line {
  height: 20rpx;
  width: 4rpx;
  background-color: #cccccc;
  margin: 0 15rpx;
}
.m-position .job .desc {
  margin-top: 10rpx;
}
.m-position .job .desc text {
  font-size: 28rpx;
  padding: 5rpx 10rpx;
  margin-right: 15rpx;
  background-color: #EBEEF5;
  border-radius: 5rpx;
  color: #666666;
}
.m-position .job .user {
  margin-top: 25rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.m-position .job .user image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
}
.m-position .job .user .left {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 28rpx;
}
.m-position .job .user .left .name {
  margin: 0 20rpx;
}
.m-position .job .user .right {
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #666666;
  font-size: 28rpx;
}
.m-position .job .user .right .area {
  margin-right: 15rpx;
}
.m-position .job .user .right .yzb-shanchu {
  font-size: 40rpx;
  color: #dd524d;
}
.m-position .course {
  padding: 15rpx 20rpx;
  border-bottom: 1rpx solid #f8f8f8;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.m-position .course .left {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
}
.m-position .course .img image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
}
.m-position .course .middle {
  box-sizing: border-box;
  padding: 20rpx;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.m-position .course .middle .title {
  line-height: 1.4;
  font-weight: bold;
  font-size: 28rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.m-position .course .middle .name {
  color: #666666;
}
.m-position .course .middle .info {
  display: flex;
  flex-direction: row;
  width: 100%;
  justify-content: space-between;
}
.m-position .course .middle .info .time {
  color: #666666;
}
.m-position .course .middle .info .number {
  color: #FF822B;
}
.m-position .task {
  padding: 20rpx;
  border-bottom: 1rpx solid #f8f8f8;
}
.m-position .task .top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 5rpx 0;
}
.m-position .task .top .title {
  font-size: 32rpx;
  font-weight: bold;
}
.m-position .task .top .price {
  font-size: 32rpx;
  color: #26CD8C;
}
.m-position .task .desc {
  color: #666666;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.m-position .task .bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 10rpx 0rpx;
}
.m-position .task .bottom text {
  font-size: 28rpx;
  padding: 5rpx 10rpx;
  margin-right: 15rpx;
  border-radius: 5rpx;
}
.m-position .task .bottom .label-type {
  background-color: #EBEEF5;
  color: #666666;
}
.m-position .task .bottom .label {
  border: 1rpx solid #FF822B;
  color: #FF822B;
}
.m-position .task .bottom .time {
  color: #666666;
}
.space-between {
  display: flex;
  justify-content: space-between;
  flex-direction: row;
}

