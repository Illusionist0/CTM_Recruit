.m-position .item {
  background-color: #ffffff;
  padding: 15rpx 20rpx;
}
.m-position .job {
  background-color: #ffffff;
  padding: 20rpx 0;
  border-bottom: 3rpx solid #f8f8f8;
}
.m-position .job .company {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.m-position .job .logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  border: 1rpx solid #EBEEF5;
}
.m-position .job .info {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}
.m-position .job .info .yzb-yirenzheng1 {
  color: #4cd964;
  margin-right: 10rpx;
}
.m-position .job .info .name {
  font-size: 34rpx;
  font-weight: bold;
}
.m-position .job .info .require {
  color: #666666;
  margin-top: 5rpx;
}
.m-position .job .info .post {
  display: flex;
  flex-direction: row;
}
.m-position .job .info .post .post-item {
  margin-right: 20rpx;
  color: #666666;
}
.m-position .job .info .post .top-icon {
  font-size: 28rpx;
  margin-right: 10rpx;
}
.m-position .job .info .welfare {
  display: flex;
  flex-direction: row;
  margin-top: 5rpx;
  flex-wrap: wrap;
}
.m-position .job .info .welfare .items {
  font-size: 24rpx;
  padding: 5rpx 10rpx;
  margin-right: 5rpx;
  background-color: #EBEEF5;
  border-radius: 5rpx;
  color: #666666;
  margin-top: 5rpx;
}
.m-position .job .yzb-next {
  color: #999999;
}
.m-position .resume {
  padding: 20rpx 0;
  border-bottom: 3rpx solid #f8f8f8;
}
.m-position .resume .title .left {
  display: flex;
  flex-direction: column;
}
.m-position .resume .title .left .name {
  font-weight: bold;
  font-size: 32rpx;
}
.m-position .resume .title .left .yzb-yirenzheng1 {
  font-weight: bold;
  font-size: 34rpx;
  color: #4cd964;
  margin-right: 10rpx;
}
.m-position .resume .title .left .yzb-nan {
  color: #12ae85;
  font-weight: bold;
  font-size: 34rpx;
  margin-left: 10rpx;
}
.m-position .resume .title .left .yzb-nv {
  color: #ff6a6a;
  font-weight: bold;
  font-size: 34rpx;
  margin-left: 10rpx;
}
.m-position .resume .title .left .skill {
  color: #666666;
  margin-top: 5rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.m-position .resume .title .left .skill .height-line {
  height: 20rpx;
  width: 4rpx;
  background-color: #cccccc;
  margin: 0 15rpx;
}
.m-position .resume .title .right {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
}
.m-position .resume .company {
  color: #666666;
  margin-top: 15rpx;
  font-size: 28rpx;
}
.m-position .resume .company .left {
  margin-right: 15rpx;
}
.m-position .resume .exp {
  line-height: 1.2;
}
.m-position .resume .exp .exp-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  line-height: 1.2;
}
.m-position .resume .exp .exp-item .top-icon {
  margin-right: 10rpx;
  margin-top: 3rpx;
}
.m-position .resume .desc {
  margin-top: 15rpx;
  flex-wrap: wrap;
}
.m-position .resume .desc text {
  font-size: 28rpx;
  padding: 5rpx 10rpx;
  margin-right: 15rpx;
  background-color: #EBEEF5;
  border-radius: 5rpx;
  color: #666666;
}
.m-position .resume .position {
  margin-top: 5rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: #666666;
}
.m-position .resume .position .title {
  font-size: 32rpx;
  color: #FF822B;
}
.m-position .resume .user {
  margin-top: 35rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.m-position .resume .user image {
  width: 60rpx;
  height: 60rpx;
}
.m-position .resume .user .left {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 28rpx;
}
.m-position .resume .user .left .name {
  margin: 0 20rpx;
}
.m-position .resume .user .right {
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #666666;
  font-size: 28rpx;
}
.m-position .resume .user .right .area {
  margin-right: 15rpx;
}
.space-between {
  display: flex;
  justify-content: space-between;
  flex-direction: row;
}

