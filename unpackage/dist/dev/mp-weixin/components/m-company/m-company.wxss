.m-position .item {
  background-color: #ffffff;
  padding: 30rpx 20rpx;
  border-bottom: 3rpx solid #f8f8f8;
}
.m-position .item .company {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.m-position .item .logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  border: 1rpx solid #EBEEF5;
}
.m-position .item .info {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}
.m-position .item .info .name {
  font-size: 34rpx;
  font-weight: bold;
}
.m-position .item .info .require {
  color: #666666;
  margin-top: 5rpx;
}
.m-position .item .info .post {
  color: #666666;
}
.m-position .item .info .post text {
  margin: 0 10rpx;
  color: #26CD8C;
}
.m-position .item .yzb-next {
  color: #999999;
}

