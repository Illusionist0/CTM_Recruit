.m-position .item {
  background-color: #ffffff;
  padding: 30rpx 20rpx;
  margin-bottom: 40rpx;
  border-bottom: 3rpx solid #f8f8f8;
}
.m-position:hover .item {
  -webkit-filter: blur(6px);
          filter: blur(6px);
  opacity: .4;
}
.m-position .item:hover {
  box-sizing: -10px 20px 35px rgba(0, 0, 0, 0.17);
  -webkit-transform: scale(1.5);
          transform: scale(1.5);
  -webkit-filter: blur(0);
          filter: blur(0);
  opacity: .1;
}
.space-between {
  display: flex;
  justify-content: space-between;
  flex-direction: row;
}
.title .left {
  font-weight: bold;
  font-size: 32rpx;
}
.title .right {
  color: #26CD8C;
  font-weight: bold;
}
.company {
  color: #666666;
  margin-top: 15rpx;
  font-size: 28rpx;
}
.company .left {
  margin-right: 15rpx;
}
.desc {
  margin-top: 25rpx;
}
.desc text {
  font-size: 28rpx;
  padding: 5rpx 10rpx;
  margin-right: 15rpx;
  background-color: #EBEEF5;
  border-radius: 5rpx;
  color: #666666;
}
.user {
  margin-top: 35rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.user image {
  width: 60rpx;
  height: 60rpx;
}
.user .left {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 28rpx;
}
.user .left .name {
  margin: 0 20rpx;
}
.user .right {
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #666666;
  font-size: 28rpx;
}
.user .right .area {
  margin-right: 15rpx;
}

